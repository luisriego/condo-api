<?xml version="1.0" encoding="utf-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <entity name="App\Entity\User" table="user">
        <id name="id" type="string" length="36" column-definition="CHAR(36) NOT NULL"/>

        <field name="name" length="50" />
        <field name="email" length="50" />
        <field name="password" length="150" nullable="true" />
        <field name="token" length="50" nullable="true"/>
        <field name="isActive" type="boolean" />
        <field name="createdOn" type="datetime_immutable" />
        <field name="updatedOn" type="datetime" />

        <unique-constraints>
            <unique-constraint columns="email" name="U_user_email"/>
        </unique-constraints>

        <many-to-many field="condos" inversed-by="users" target-entity="App\Entity\Condo">
            <join-table name="user_condo">
                <join-columns>
                    <join-column name="user_id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="condo_id" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>

        <lifecycle-callbacks>
            <lifecycle-callback type="preUpdate" method="markAsUpdated"/>
        </lifecycle-callbacks>
    </entity>
</doctrine-mapping>
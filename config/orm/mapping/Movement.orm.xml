<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <entity name="App\Entity\Movement" table="movement">
        <id name="id" type="string" length="36" column-definition="CHAR(36) NOT NULL"/>

        <field name="amount" type="integer" />
        <field name="filePath" length="255" nullable="true" />
        <field name="isActive" type="boolean" />
        <field name="dueOn" type="datetime" nullable="true" />
        <field name="regarding" type="datetime" nullable="true" />
        <field name="createdOn" type="datetime_immutable" />
        <field name="updatedOn" type="datetime" />

        <many-to-one field="category" target-entity="App\Entity\Category">
            <join-column name="category_id" on-delete="CASCADE" />
        </many-to-one>
        <many-to-one field="account" target-entity="App\Entity\Account">
            <join-column name="account_id" on-delete="CASCADE" />
        </many-to-one>
        <many-to-one field="condo" target-entity="App\Entity\Condo">
            <join-column name="condo_id" on-delete="CASCADE" />
        </many-to-one>
        <many-to-one field="user" target-entity="App\Entity\User">
            <join-column name="user_id" on-delete="CASCADE" />
        </many-to-one>

        <indexes>
            <index columns="category_id" name="IDX_movement_category_id" />
            <index columns="account_id" name="IDX_movement_account_id" />
            <index columns="condo_id" name="IDX_movement_condo_id" />
            <index columns="user_id" name="IDX_movement_user_id" />
        </indexes>

        <lifecycle-callbacks>
            <lifecycle-callback type="preUpdate" method="markAsUpdated"/>
        </lifecycle-callbacks>
    </entity>
</doctrine-mapping>